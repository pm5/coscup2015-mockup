<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>首頁 - {{ title }}</title>
    <link rel="stylesheet" href="{{ baseUrl }}/styles.css"/>
    <script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
  </head>
  <body>
    {% block intro %}
    <div id="header">
      <header>
        <div class="wrap">
          <nav>
            <div id="logo"><a href="{{ baseUrl }}/"><img src="{{ baseUrl }}/images/logo.png"/></a></div>
            {% block header %}{% endblock %}
          </nav>
        </div>
      </header>
    </div>
    {% endblock %}
    <div id="content">
      <div class="wrap">
        {% block content %}{% endblock %}
      </div>
      {% block asides %}
        <aside class="left">
        </aside>
        {% include "sponsors.twig" %}
      {% endblock %}
    </div>
    <footer id="footer">
      <div class="wrap">
        {% block footer %}{% endblock %}
      </div>
    </footer>
  </body>
</html>
